version: '3.6'

services:
  arke:
    image: "<%= @utils['images']['arke'] %>"
    volumes:
      - ../config/arke:/home/app/config
    command: ./bin/arke start

  services:
  arke-recorder:
    image: "<%= @utils['images']['arke'] %>"
    env_file:
      - ../config/arke.env
    volumes:
      - ../config/arke:/home/app/config
    command: ./bin/arke recorder start


